https://leetcode-cn.com/problems/arithmetic-slices/
class Solution {
    public int numberOfArithmeticSlices(int[] A) {
      if(A==null || A.length==0)
          return 0;
      if(A.length==1)
          return 0;
      //是的还是动态规划,考虑以A[i]为最后元素的等差数组数，累加求和
      int dp=0,sum=0,d1=A[1]-A[0];
      for(int i=2;i<A.length;i++){
          int d2=A[i]-A[i-1];
          if(d2==d1)
              sum+=(++dp);
          else dp=0;
          d1=d2;
      }
      return sum;
    }
}
